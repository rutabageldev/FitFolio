{
  "name": "FitFolio Dev Container",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "backend",
  "workspaceFolder": "/workspaces/fitfolio",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
    "type=volume,source=vscode-server,target=/root/.vscode-server"
  ],
  "postCreateCommand": "/usr/bin/bash -lc 'python -m pip install -r backend/requirements.txt && .devcontainer/scripts/configure-git.sh'",
  "postStartCommand": "/usr/bin/bash -lc 'mkdir -p ~/.ssh && chmod 700 ~/.ssh && touch ~/.ssh/known_hosts && ssh-keyscan -H github.com >> ~/.ssh/known_hosts 2>/dev/null || true; install -m 0644 .devcontainer/scripts/shell-aliases.sh /etc/profile.d/zz-fitfolio-aliases.sh; .devcontainer/scripts/configure-git.sh || true'",
  "containerEnv": {
    "VSCODE_AGENT_FOLDER": "/root/.vscode-server"
  },
  "remoteEnv": {
    "SSH_AUTH_SOCK": "/run/host-ssh",
    "VSCODE_AGENT_FOLDER": "/root/.vscode-server"
  },
  "postAttachCommand": "/usr/bin/bash -lc '.devcontainer/scripts/configure-ssh.sh --interactive || true'"
}
