{
  "name": "FitFolio Dev Container",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "backend",
  "workspaceFolder": "/workspaces/fitfolio",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
"mounts": [
  "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
  "type=bind,source=${localEnv:SSH_AUTH_SOCK},target=/tmp/ssh-agent.sock"
  ],

"postCreateCommand": "/usr/bin/bash -lc 'python -m pip install -r backend/requirements.txt && .devcontainer/scripts/configure-git.sh'",
"postStartCommand": "/usr/bin/bash -lc '.devcontainer/scripts/configure-git.sh || true' && /usr/bin/bash -lc 'mkdir -p ~/.ssh && chmod 700 ~/.ssh && touch ~/.ssh/known_hosts && ssh-keyscan -H github.com >> ~/.ssh/known_hosts 2>/dev/null || true; .devcontainer/scripts/configure-git.sh || true'",
"postAttachCommand": "/usr/bin/bash -lc '.devcontainer/scripts/configure-ssh.sh --interactive || true'",

"remoteEnv": { "SSH_AUTH_SOCK": "/run/host-ssh" }
}
